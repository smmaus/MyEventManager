<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".search_activity"
    android:background="@drawable/background1_v1"
    android:padding="30dp">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchEvents"
        android:layout_gravity="center_horizontal"
        android:text="@string/searchEvents"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fcf6ff"
        android:typeface="normal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:id="@+id/searchEventTitle"
        android:layout_marginTop="10dp"
        android:hint="@string/searchEvent"
        android:textColor="#fff9fb"
        android:textStyle="italic"
        android:background="@drawable/background_2"
        android:editable="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</LinearLayout>