<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".add_activity"
    android:background="@drawable/background1_v1"
    android:padding="30dp">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addEvent"
        android:layout_gravity="center_horizontal"
        android:text="@string/edit"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fcf6ff"
        android:typeface="normal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:id="@+id/addEventTitle"
        android:layout_marginTop="10dp"
        android:hint="Event name"
        android:textColor="#fff9fb"
        android:textStyle="italic"
        android:background="@drawable/background_2"
        android:editable="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addEventDesc"
        android:background="@drawable/background_2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:editable="true"
        android:hint="Description"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="italic"
        android:textColor="#fff9fb" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/addEventDate"
        android:textStyle="italic"
        android:textColor="#fff9fb"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Date"
        android:background="@drawable/background_2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:editable="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/addEventTime"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_2"
        android:hint="Time"
        android:textColor="#fff9fb"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET ALARM!"
        android:id="@+id/alarmCheckBox"
        android:enabled="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/doneButton"
            android:layout_gravity="left|top"
            android:textStyle="bold"
            android:background="#7a7a7a" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/deleteButton"
            android:layout_gravity="right|top"
            android:background="#7a7a7a"
            android:textStyle="bold" />
    </FrameLayout>


</LinearLayout>